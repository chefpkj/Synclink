{
  "name": "sonarqube-scanner",
  "description": "SonarQube/SonarCloud Scanner for the JavaScript world",
  "version": "3.3.0",
  "homepage": "https://github.com/SonarSource/sonar-scanner-npm",
  "author": {
    "name": "Fabrice Bellingard",
    "email": "fabrice.bellingard@sonarsource.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonarSource/sonar-scanner-npm.git"
  },
  "bugs": {
    "url": "https://github.com/SonarSource/sonar-scanner-npm/issues"
  },
  "license": "LGPL-3.0-only",
  "main": "src/index.js",
  "bin": {
    "sonar-scanner": "src/bin/sonar-scanner"
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "fancy-log": "^2.0.0",
    "https-proxy-agent": "^7.0.1",
    "jest-sonar-reporter": "^2.0.0",
    "mkdirp": "^3.0.1",
    "node-downloader-helper": "^2.1.9",
    "progress": "^2.0.3",
    "shell-quote": "^1.8.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.7",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^4.3.10",
    "eslint": "^8.48.0",
    "eslint-plugin-notice": "^0.9.10",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.1",
    "sinon": "^15.2.0",
    "typescript": "<5.2"
  },
  "keywords": [
    "sonarqube",
    "sonarcloud",
    "sonarqube-scanner",
    "sonarqube-runner",
    "sonar-scanner",
    "sonar-runner"
  ],
  "scripts": {
    "build": "npm ci && npm run check-format && npm run license && npm test && node ./scripts/build-orchestrator.js",
    "test": "npx jest --coverage",
    "test-integration": "cd test/integration && npm test",
    "format": "prettier --write .",
    "check-format": "prettier --list-different .",
    "license": "eslint --ext js,ts src test tools scripts .",
    "license-fix": "eslint --fix --ext js,ts src test tools scripts .",
    "precommit": "pretty-quick --staged",
    "prepare": "husky install .husky"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "files": [
    "src/**"
  ]
}
